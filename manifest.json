{
    "name": "Listeprepp",
    "description": "Listeprepp fra linkedin profil",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "scripting",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/in/*",
                "https://www.linkedin.com/in/*/details/experience*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    }
}